[Unit]
Description=TemperatureService
After=network.target

[Service]
WorkingDirectory=/home/pi/dev/raspi-temp-server
ExecStart=/home/pi/.nvm/versions/node/v16.15.1/bin/node /home/pi/dev/raspi-temp-server/index.js
Restart=on-failure
User=root
Environment=PORT=3000

[Install]
WantedBy=multi-user.target